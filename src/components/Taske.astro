  justify-content: center;
  text-align: left;
 height: 85vh;


    }

    .hero-img{
        height:90vh;
    width: 100%;
    background-color: var(--brandcolor);
    padding-top: 2rem;
    }



.hero-button {
 background-color: var(--accent3);
  height: auto;
  padding: 0.5rem 2rem 0.5rem 2rem;
  border-radius: 0.5rem;
  box-shadow: 6px 6px 0px var(--primary);
  /*placerer item i midten*/
  margin: auto;
  transition: 0.5s;
}
.hero-button a{
    text-decoration: none;
    color: var(--primary);
}
.hero-button:hover{
    background-color: var(--primary);
    box-shadow: 6px 6px 0px var(--accent3);
    transition: 0.5s;
}
.hero-button:hover a{
    color: var(--accent3);
}
.container{
    width: 100%;
  aspect-ratio: 9/16;
  position: relative;
  container-type: inline-size;
  background-color: var(--accent3);
}

.piller{
    top: 1;
    aspect-ratio: 106.74/68.83;
    position: absolute;
}
.piller div{
    width: 100%;
  height: 100%;
      background-image: url(/piller.svg);
    background-size: cover;
}
@media (min-width: 900px) {
    h1{
        margin: -3rem 0 -3rem 0;
        font-size: 3.8rem;
    }

.hero-fill{
    justify-content: inherit;
}
}
    
</style>