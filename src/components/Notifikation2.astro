---
import "../styles/animation.css";
import "../styles/generel.css";
const { tegn, text } = Astro.props;
---

<div class="outline animNotif2">
  <span class="icon">{tegn}</span>
  <h3 class="text">{text}</h3>
</div>

<style>
  .outline {
    border: solid 4px var(--brandcolor);
    border-radius: 20px;
    display: grid;
    grid-template-columns: 1fr 10fr;
    margin-right: 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  h3 {
    color: var(--brandcolor);
    font-size: 20px;
  }

  .icon {
    text-align: center;
    color: var(--brandcolor);
    border: solid 4px var(--brandcolor);
    border-radius: 20px;
    margin: 0.3rem;
    aspect-ratio: 1/1;
    min-width: 5rem;
    font-family: "obviously", sans-serif;
    font-weight: 700;
    font-style: normal;
    font-size: 40px;
    padding-top: 1rem;
  }

  .text {
    margin: 0.4rem;
    color: var(--brandcolor);
  }
</style>
