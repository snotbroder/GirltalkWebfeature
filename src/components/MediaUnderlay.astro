---
const { src, alt, anim } = Astro.props;
import "../styles/generel.css";
---

<img class={anim} src={src} alt={alt} width="800" height="622" />

<style>
  img {
    border-radius: 5px;
    overflow: hidden;
    margin: 2rem 0 3rem 0;
  }

  .primarybg {
    box-shadow: 18px 18px 0px 2px var(--primary);
  }

  .brandcolorbg {
    box-shadow: 18px 18px 0px 2px var(--primary);
  }

  @media (min-width: 900px) {
    img {
      max-width: 80%;
    }
  }
</style>
